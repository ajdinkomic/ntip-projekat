<% include ./partials/head %> <% include ./partials/flashmessages %>

<main>
	<!-- Promijeni sifru - section -->
	<section class="registration-login-page-section">
		<div class="container-fluid">
			<div class="row justify-content-center align-items-center">
				<div class="col-md-6">
					<div class="card px-lg-5 py-md-4">
						<div class="card-body">
							<h4 class="card-title text-center">
								<strong>Promijeni šifru</strong>
							</h4>
							<form action="/forgot" method="POST" class="mt-4 mt-md-5">
                                
                                <div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="email"><i class="fas fa-envelope"></i></span>
									</div>
									<input
										type="e-mail"
										name="email"
										class="form-control"
										placeholder="email@primjer.com*"
										title="E-mail adresa"
										aria-label="Email"
										aria-describedby="email"
										required
									/>
								</div>

								<div class="form-group mt-4 mt-md-5">
									<button class="btn read-more-btn register-btn btn-block" type="submit">Promijeni šifru</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>

<% include ./partials/foot %>
