<% include ./partials/head %> <% include ./partials/flashmessages %>

<main>
	<!-- Promijeni sifru - section -->
	<section class="registration-login-page-section">
		<div class="container-fluid">
			<div class="row justify-content-center align-items-center">
				<div class="col-md-6">
					<div class="card px-lg-5 py-md-4">
						<div class="card-body">
							<h4 class="card-title text-center">
								<strong>Promijeni šifru</strong>
							</h4>
							<form action="/reset/<%= token %>" method="POST" class="mt-4 mt-md-5">
                                
                                <div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="password"><i class="fas fa-lock"></i></span>
									</div>
									<input
										type="password"
										name="password"
										class="form-control"
										placeholder="Nova šifra*"
										title="Nova šifra"
										aria-label="Šifra"
                                        aria-describedby="password"
										required
									/>
                                </div>
                                
                                <div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text" id="confirm"><i class="fas fa-lock"></i></span>
									</div>
									<input
										type="password"
										name="confirm"
										class="form-control"
										placeholder="Potvrda nove šifre*"
										title="Potvrdi šifru"
										aria-label="Potvrda nove šifre"
                                        aria-describedby="confirm"
										required
									/>
								</div>

								<div class="form-group mt-4 mt-md-5">
									<button class="btn read-more-btn register-btn btn-block" type="submit">Promijeni šifru</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>

<% include ./partials/foot %>